{
  "name": "@weirdfingers/baseboards",
  "version": "0.7.0",
  "description": "One-command launcher for the Boards image generation application",
  "type": "module",
  "bin": {
    "baseboards": "./dist/index.js"
  },
  "files": [
    "dist",
    "templates"
  ],
  "scripts": {
    "prepare-templates": "node scripts/prepare-templates.js",
    "prebuild": "pnpm run prepare-templates",
    "build": "tsup && node scripts/add-shebang.js",
    "dev": "tsup --watch",
    "test": "vitest --run",
    "typecheck": "tsc --noEmit",
    "clean": "rm -rf dist templates"
  },
  "keywords": [
    "boards",
    "image-generation",
    "ai",
    "docker",
    "fullstack",
    "cli"
  ],
  "author": "weirdfingers",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/weirdfingers/boards.git",
    "directory": "packages/cli-launcher"
  },
  "homepage": "https://github.com/weirdfingers/boards#readme",
  "bugs": {
    "url": "https://github.com/weirdfingers/boards/issues"
  },
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "dependencies": {
    "commander": "^12.0.0",
    "execa": "^9.0.0",
    "fs-extra": "^11.2.0",
    "yaml": "^2.4.0",
    "ora": "^8.0.0",
    "chalk": "^5.3.0",
    "which": "^4.0.0",
    "prompts": "^2.4.2"
  },
  "devDependencies": {
    "@types/fs-extra": "^11.0.4",
    "@types/node": "^20.11.0",
    "@types/prompts": "^2.4.9",
    "@types/which": "^3.0.3",
    "ajv": "^8.12.0",
    "tsup": "^8.0.0",
    "typescript": "^5.3.0",
    "vitest": "^1.6.0"
  }
}
