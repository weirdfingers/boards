# Boards Backend Configuration
# Copy this file to .env and fill in your values

# Database
BOARDS_DATABASE_URL=postgresql://boards:boards_dev@localhost:5432/boards_dev

# Redis (for job queue)
BOARDS_REDIS_URL=redis://localhost:6379

# Storage
BOARDS_STORAGE_PROVIDER=local
BOARDS_LOCAL_STORAGE_PATH=/tmp/boards-storage

# Auth
BOARDS_AUTH_PROVIDER=none
# BOARDS_JWT_SECRET=your-secret-key-here

# API Settings
BOARDS_API_HOST=0.0.0.0
BOARDS_API_PORT=8000
BOARDS_API_RELOAD=true
BOARDS_CORS_ORIGINS=["http://localhost:3000"]

# Environment
BOARDS_ENVIRONMENT=development
BOARDS_DEBUG=true
BOARDS_LOG_LEVEL=INFO

# Multi-tenant mode
BOARDS_MULTI_TENANT_MODE=false
BOARDS_DEFAULT_TENANT_SLUG=default

# Provider Configuration
BOARDS_PROVIDERS_CONFIG_PATH=providers.yaml