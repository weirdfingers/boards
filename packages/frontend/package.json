{
  "name": "@weirdfingers/boards",
  "version": "0.1.0",
  "description": "React hooks for Boards creative toolkit",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./frontend": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "dev": "tsup --watch",
    "build": "tsup",
    "test": "vitest --run",
    "lint": "eslint src --ext .js,.ts,.tsx",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "@urql/core": "^6.0.1",
    "@urql/exchange-auth": "^3.0.0",
    "graphql": "^16.11.0",
    "graphql-request": "^7.2.0",
    "graphql-ws": "^6.0.6",
    "urql": "^5.0.1"
  },
  "peerDependencies": {
    "react": "^18.0.0",
    "react-dom": "^18.0.0"
  },
  "devDependencies": {
    "@types/react": "^18.3.0",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^8.57.0",
    "jsdom": "^26.1.0",
    "tsup": "^8.1.0",
    "typescript": "^5.5.3",
    "vitest": "^1.6.0"
  }
