# Boards Backend Configuration
# Copy this file to .env and fill in your values

# Database
BOARDS_DATABASE_URL=postgresql://boards:boards_dev@localhost:5433/boards_dev

# Redis (for job queue)
BOARDS_REDIS_URL=redis://localhost:6380

# Storage
BOARDS_STORAGE_PROVIDER=local
BOARDS_LOCAL_STORAGE_PATH=/tmp/boards-storage

# Auth
BOARDS_AUTH_PROVIDER=none
# BOARDS_JWT_SECRET=your-secret-key-here

# API Settings
BOARDS_API_HOST=0.0.0.0
BOARDS_API_PORT=8088
BOARDS_API_RELOAD=true
BOARDS_CORS_ORIGINS=["http://localhost:3033"]

# Environment
BOARDS_ENVIRONMENT=development
BOARDS_DEBUG=true
BOARDS_LOG_LEVEL=INFO

# Multi-tenant mode
BOARDS_MULTI_TENANT_MODE=false
BOARDS_DEFAULT_TENANT_SLUG=default

# Generator Configuration
BOARDS_GENERATORS_CONFIG_PATH=baseline-config/generators.yaml
BOARDS_STORAGE_CONFIG_PATH=baseline-config/storage_config.yaml

# Generator API Keys (as JSON dict)
# These keys are synced to os.environ at startup for third-party packages
# Example: BOARDS_GENERATOR_API_KEYS='{"REPLICATE_API_TOKEN": "your-token-here", "OPENAI_API_KEY": "your-key-here"}'
BOARDS_GENERATOR_API_KEYS={}
